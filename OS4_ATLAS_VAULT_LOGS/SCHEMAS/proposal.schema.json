{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://os4.medialux/schemas/OS4_ATLAS_VAULT_LOGS/proposal.schema.json",
  "title": "OS4_ATLAS_VAULT_LOGS Governance Proposal (Canonical, 2-Step CorePass)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "proposal_id",
    "version",
    "ts_created_utc",
    "tenant_id",
    "action",
    "risk_context",
    "evidence",
    "approvals",
    "execution"
  ],
  "properties": {
    "proposal_id": {
      "type": "string",
      "pattern": "^GOV-[0-9]{4}-[0-9]{2}-[0-9]{2}-[0-9]{4}$"
    },
    "version": { "type": "string", "minLength": 1, "maxLength": 32 },
    "ts_created_utc": { "type": "string", "format": "date-time" },
    "tenant_id": { "type": "string", "minLength": 3, "maxLength": 64 },

    "action": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "params", "constraints"],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "BASIS_SWITCH_ENGINE",
            "LEVERAGE_PARAM_CHANGE",
            "DEPEG_GUARD_OVERRIDE",
            "EMERGENCY_PAUSE",
            "RESUME"
          ]
        },
        "params": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "target_strategy": {
              "type": "string",
              "enum": ["STABLE_CASHFLOW", "BASIS_ENGINE"]
            },
            "max_leverage": {
              "type": "string",
              "pattern": "^[0-9]+(\\.[0-9]+)?$"
            },
            "min_cash_reserve": {
              "type": "string",
              "pattern": "^[0-9]+(\\.[0-9]+)?$"
            },
            "override_ttl_sec": {
              "type": "integer",
              "minimum": 0,
              "maximum": 86400
            }
          }
        },
        "constraints": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "hardcap_leverage",
            "reserve_floor",
            "requires_funding_divergence_guard",
            "requires_depeg_guard",
            "requires_2step_governance"
          ],
          "properties": {
            "hardcap_leverage": { "type": "string", "const": "1.30" },
            "reserve_floor": { "type": "string", "const": "0.15" },
            "requires_funding_divergence_guard": { "type": "boolean", "const": true },
            "requires_depeg_guard": { "type": "boolean", "const": true },
            "requires_2step_governance": { "type": "boolean", "const": true }
          }
        }
      }
    },

    "risk_context": {
      "type": "object",
      "additionalProperties": false,
      "required": ["reason_code", "severity", "metrics_hash"],
      "properties": {
        "reason_code": {
          "type": "string",
          "enum": [
            "FUNDING_DIVERGENCE",
            "PEG_DRIFT",
            "VENUE_OUTAGE",
            "VOLATILITY_SPIKE",
            "MANUAL"
          ]
        },
        "severity": { "type": "string", "enum": ["INFO", "WARN", "CRIT"] },
        "metrics_hash": { "type": "string", "pattern": "^0x[0-9a-f]{64}$" }
      }
    },

    "evidence": {
      "type": "object",
      "additionalProperties": false,
      "required": ["evidence_root", "anchor_batch_id"],
      "properties": {
        "evidence_root": { "type": "string", "pattern": "^0x[0-9a-f]{64}$" },
        "anchor_batch_id": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}-(AM|PM|DAY|CRIT)$"
        }
      }
    },

    "approvals": {
      "type": "object",
      "additionalProperties": false,
      "required": ["step1_validator", "step2_human_consent"],
      "properties": {
        "step1_validator": {
          "type": "object",
          "additionalProperties": false,
          "required": ["required", "corepass_did_hash", "sig_hash"],
          "properties": {
            "required": { "type": "boolean", "const": true },
            "corepass_did_hash": { "type": "string", "pattern": "^0x[0-9a-f]{64}$" },
            "sig_hash": { "type": "string", "pattern": "^0x[0-9a-f]{64}$" }
          }
        },
        "step2_human_consent": {
          "type": "object",
          "additionalProperties": false,
          "required": ["required", "corepass_did_hash", "sig_hash"],
          "properties": {
            "required": { "type": "boolean", "const": true },
            "corepass_did_hash": { "type": "string", "pattern": "^0x[0-9a-f]{64}$" },
            "sig_hash": { "type": "string", "pattern": "^0x[0-9a-f]{64}$" }
          }
        }
      }
    },

    "execution": {
      "type": "object",
      "additionalProperties": false,
      "required": ["timelock_sec", "earliest_execute_utc", "expires_utc"],
      "properties": {
        "timelock_sec": { "type": "integer", "minimum": 0, "maximum": 604800 },
        "earliest_execute_utc": { "type": "string", "format": "date-time" },
        "expires_utc": { "type": "string", "format": "date-time" }
      }
    }
  }
}
