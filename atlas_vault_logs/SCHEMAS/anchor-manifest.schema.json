{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://os4.medialux/schemas/atlas/anchor-manifest.schema.json",
  "title": "OS4 ATLAS Vault Anchor Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "batch_id",
    "ts_utc_close",
    "included_files",
    "merkle_root",
    "manifest_hash",
    "build_version",
    "builder"
  ],
  "properties": {
    "batch_id": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}-(AM|PM|DAY|CRIT)$"
    },
    "ts_utc_close": {
      "type": "string",
      "format": "date-time"
    },
    "included_files": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9_\\-/\\.]+\\.jsonl$"
      }
    },
    "file_hashes": {
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "pattern": "^0x[0-9a-f]{64}$"
      }
    },
    "merkle_root": {
      "type": "string",
      "pattern": "^0x[0-9a-f]{64}$"
    },
    "manifest_hash": {
      "type": "string",
      "pattern": "^0x[0-9a-f]{64}$"
    },
    "build_version": {
      "type": "string",
      "minLength": 1,
      "maxLength": 32
    },
    "builder": {
      "type": "object",
      "additionalProperties": false,
      "required": ["builder_id", "corepass_did_hash"],
      "properties": {
        "builder_id": {
          "type": "string",
          "maxLength": 64
        },
        "corepass_did_hash": {
          "type": "string",
          "pattern": "^0x[0-9a-f]{64}$"
        }
      }
    },
    "core_chain": {
      "type": "object",
      "additionalProperties": false,
      "required": ["anchor_tx_hash", "anchor_contract", "anchor_id"],
      "properties": {
        "anchor_tx_hash": {
          "type": "string",
          "pattern": "^0x[0-9a-f]{64}$"
        },
        "anchor_contract": {
          "type": "string",
          "pattern": "^0x[0-9a-fA-F]{6,64}$"
        },
        "anchor_id": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  }
}
